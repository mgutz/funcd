module.exports = (t) ->
  t.html ->
    t.head ->
    t.body ->
      t.div id:"content"

      t.script src:"https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"
      t.script src:"http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.1/underscore-min.js"
      t.script src:"../lib/funcd.js"
      t.coffeescript """
        update = ($el) ->
          setTimeout (-> 
            $el.funcd (t) -> t.div "bar baby!"
          ), 2000

        template = (t) ->
          t.div style:"background-color:#999; color:#000", "inserted via template"
          t.div "data-funcd-async":update, "this will change in 2 seconds"

        $ ->
          $('#content').funcd template
      """